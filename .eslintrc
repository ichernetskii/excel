{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "quotes": ["error", "double"],
    "object-curly-spacing": ["error", "always", {"arraysInObjects":  true, "objectsInObjects":  true}],
    "arrow-parens": ["error", "as-needed"],
    "indent": "off",
    "no-trailing-spaces": "off",
    "comma-dangle": ["error", "never"],
    "semi": "off",
    "require-jsdoc": "off",
    "max-len": ["error", 150],
    "linebreak-style": "off",
    "one-var": "off"
  },
  "plugins": ["jest"]
}
